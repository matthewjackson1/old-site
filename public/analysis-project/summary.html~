<script type="text/javascript">
$(document).ready(function() {
	var s = $("#Bsidebar");
	var pos = s.position();
	var s2 = $("#mainrightbar");
	var pos2 = s2.position();					   
	$(window).scroll(function() {
		var windowpos = $(window).scrollTop();
		if (windowpos >= pos.top) {
			s.addClass("stick");
		} else {
			s.removeClass("stick");	
		}
	
		var windowpos = $(window).scrollTop();
		if (windowpos >= pos.top) {
			s2.addClass("stick2");
		} else {	
			s2.removeClass("stick2");
		}
	});

});
</script>
<script type="text/javascript">

function enlargeImg(ima, height, width) {
	myImage = document.getElementById(ima);
    	myImage.style.width = width;
    	myImage.style.height = height;
    myImage.style.cssFloat="none";
    
    	
}

function reduceImg(ima, height, width) {
	myImage = document.getElementById(ima);
    	myImage.style.width = width;
    	myImage.style.height = height;
    	myImage.style.cssFloat="left";
}

</script>


